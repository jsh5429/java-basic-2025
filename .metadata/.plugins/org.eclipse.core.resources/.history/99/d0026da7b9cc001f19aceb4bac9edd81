package chapter03;

import java.time.LocalDateTime;
import java.time.Month;

// 열거형(Enum) : 서로 관련된 상수들의 집합을 나타내는 특수한 클래스. '상수들의 집합'
// enum 열거형타입이름 { 상수... }

enum Color1 {
	// 지정하고자 하는 상수를 ,로 나열
	RED, ORANGE, YELLOW, GREEN, BLUE, INDIGO, PURPLE
}

enum Color2{
	// 기본 생성자가 아닌 매개변수가 있는 생성자를 만들경우 상수 자체에 생성자를 만든다.
	// 생성자 호출을 열거된 상수 위치에서 호출함.
	RED("#ff0000", "rgb(255, 0, 0)"), 
	GREEN("#00ff00", "rgb(0, 255, 0)"), 
	BLUE("#0000ff", "rgb(0, 0, 255)");
	
	// 열거형도 클래스이기 때문에 필드, 생성자, 메서드를 모두 가질 수 있음.
	// enum의 필드는 상수로 사용되기 때문에 변경되면 안된다.
	// 보통 enum의 필드들은 기획단계의 하나의 약속으로 시작되기 때문.
	// 캡슐화 작업이 필요. private final
	private final String hex;
	private final String rgb;
	
	// 생성자의 접근제어자 private
	// 일반적으로 public을 붙이는게 생성자지만
	// 이런 경우에는 인스턴스 생성 자체를 외부에서 못하게 막는 것.
	private Color2(String hex, String rgb){
		this.hex = hex;
		this.rgb = rgb;
	}
	
	public String getHex() {
		return hex;
	}
	public String getRgb() {
		return rgb;
	}
}

public class G_Enum {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		// 생성자 x
		Color1 color1 = Color1.RED;
		System.out.println(color1);
		
		if (color1 == Color1.RED) {
			System.out.println("빨강색");
		}
		
		Color2 color2 = Color2.BLUE;
		System.out.println(color2);
		//System.out.println(color2.hex);
		//System.out.println(color2.rgb);
		// hex,rgb에 private final을 붙이지 않았을 경우 변경 가능상태임.
		//color2.hex = "#000099";
		//System.out.println(color2.hex);
		
		System.out.println(color2.getHex());
		
		// 현재 시간
		LocalDateTime localDateTime = LocalDateTime.now();
		// Month는 enum으로 선언되어있다.
		Month month = localDateTime.getMonth();
		// 현재 날짜의 월이 나온다.
		//System.out.println(month);
		
		switch(month) {
		case Month.APRIL:
			System.out.println("작업");
		}

	}

}
